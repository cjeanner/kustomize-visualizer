{
  "name": "kustomize-visualizer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Visualiseur d'overlays GitOps Kustomize",
  "author": "Votre Nom",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron electron/main.cjs\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "cytoscape": "^3.30.3",
    "cytoscape-dagre": "^2.5.0",
    "i18next": "^25.8.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "idb": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.kustomize.visualizer",
    "productName": "Kustomize Visualizer",
    "files": [
      "dist/**/*",
      "electron/**/*.cjs"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
